<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href=""><img class="md-site-logo" src="https://tradgardsproffsen.se/_nuxt/img/53568fd.png" /></a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>expandSubNav = !expandSubNav">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Företag
            </NavLink>
            @if (expandSubNav)
            {
                <NavLink class="expand-menu" href="company">
                    <span class="oi oi-list-rich" aria-hidden="true"></span>Hämta Företag
                </NavLink>
                <NavLink class="expand-menu" href="createcompany">
                    <span class="oi oi-list-rich" aria-hidden="true"></span>Skapa Företag
                </NavLink>
                <NavLink class="expand-menu" href="updatecompany">
                    <span class="oi oi-list-rich" aria-hidden="true"></span>Updatera Företag
                </NavLink>
                <NavLink class="expand-menu" href="deletecompany">
                    <span class="oi oi-list-rich" aria-hidden="true"></span>Radera Företag
                </NavLink>
            }
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="lead">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Leads
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="job">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Jobb
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandSubNav;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
