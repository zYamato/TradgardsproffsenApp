@page "/ValidatedLeadInfo/{id}"

@using TradgardsproffsenApp.Data.Services
@inject ValidatedLeadService Service
@inherits ValidateLeadInfoBase


<h3 class="d-flex justify-content-center pb-5">Validerade Leads Information</h3>

<html>

<head>
    <title>Validatedlead Info</title>
</head>

<body class="form-body">
    <div class="textbox d-flex justify-content-center">
        <form action="/">
            <div class="banner">
                <form-h1 style="font-weight:600">Validerat Lead</form-h1>
            </div>
            <div class="item">
                <p>Namn</p>
                <div class="name-item">
                    <input type="text" name="name" @bind="lead.Name" readonly />
                </div>
            </div>
            <div class="name-item">
                <p>Email</p>
                <div class="email-item">
                    <input type="text" name="email" @bind="lead.Email" readonly />
                </div>
            </div>
            <div class="name-item">
                <p>Telefon Nummer</p>
                <div class="number-item">
                    <input type="text" name="PhoneNumber" @bind="lead.PhoneNumber" readonly />
                </div>
            </div>
            <div class="name-item">
                <p>Adress</p>
                <div class="address-item">
                    <input type="text" name="omsattning" @bind="lead.Address" readonly />
                </div>
            </div>
            <div class="name-item">
                <p>Län</p>
                <div class="district-item">
                    <input type="text" name="province" @bind="lead.District" readonly />
                </div>
            </div>
            <div class="name-item">
                <p>Post Nummer</p>
                <div class="province-item">
                    <input type="text" name="province" @bind="lead.PostCode" readonly />
                </div>
            </div>
            <div class="name-item">
                <p>Info</p>
                <div class="info-item">
                    <input type="text" name="info" @bind="lead.Info" readonly />
                </div>
            </div>
            <div class="name-item">
                <p>URL</p>
                <div class="url-item">
                    <input type="text" name="url" @bind="lead.URL" readonly />
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Jobb</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var j in jobs)
                    {
                        <tr>
                            <td>@j.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
            <button type="button" class="btn btn-primary" @onclick="(()=>onClickSend(int.Parse(Id)))">Skicka</button>
        </form>
    </div>
</body>
</html>
